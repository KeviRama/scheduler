<div id="request-index" data-dorefresh="0" class="flag-refreshes">
<div class="flip-button">
  <%= link_to @flip_text, @flip_target, class: "zfbutton tiny radius" %>
</div>
<h1><%= @title %></h1>

<div class="apple_pagination">
  <%= will_paginate @requests %>
</div>

<table class="zftable">
  <thead>
    <tr>
      <th>Start</th>
      <th>Duration</th>
      <th>Body</th>
      <% if @show_owner %>
        <th title="Owner">Own</th>
      <% end %>
      <% if @show_organiser %>
        <th title="Organiser">Org</th>
      <% end %>
      <% if @show_resource %>
        <th>Resource</th>
      <% end %>
      <th>Qty</th>
      <th>Alloc</th>
      <th>Form</th>
      <% if @show_action_buttons %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <%= render @requests %>
  </tbody>
</table>

<div class="apple_pagination">
  <%= will_paginate @requests %>
</div>
</div>
<br>

