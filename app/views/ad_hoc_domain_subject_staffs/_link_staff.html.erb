<%
  subject = link_staff.ad_hoc_domain_subject
  staff   = link_staff.ad_hoc_domain_staff
%>
<div id='ahd-nested-staff-<%= subject.id_suffix %><%= staff.id_suffix %>'>
  <%= ahd_row(
    contents: {
      staff_delete: ahd_deletion_link(link_staff),
      staff: staff.staff_name,
      pupil_heading: "Pupils",
      mins_heading:  "Mins"
    },
    row_classes: %w(overrule minor)) %>
  <div id='ahd-staff-pupils-<%= staff.id_suffix %>'>
    <% if link_staff.ad_hoc_domain_pupil_courses.size == 0 %>
      <%= ahd_row(contents: { no_pupils: "None defined yet." },
                  row_classes: %w(placeholder)) %>
    <% else %>
  <%=
    render link_staff.ad_hoc_domain_pupil_courses.sort,
    %>
    <% end %>
  </div>
  <%=
    ahd_row(
      contents: {
        pupil_form: ahd_new_pupil_form(link_staff)
      })
  %>
</div>

