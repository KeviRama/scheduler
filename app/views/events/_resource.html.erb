<% if known_user? %>
<div class="row collapse">
  <div class="small-12 medium-4 columns">
    <label>Staff</label>
    <%= commitment_entries_for(resource, Staff, editing, current_user) %>
  </div>
  <div class="small-12 medium-4 columns">
    <label>Pupils</label>
    <%= commitment_entries_for(resource, Pupil, editing, current_user) %>
  </div>
  <div class="small-12 medium-4 columns">
    <label>Locations</label>
    <%= commitment_entries_for(resource, Location, editing, current_user) %>
  </div>
</div>
<div class="row collapse">
  <div class="small-6 medium-3 columns">
    <label>Groups</label>
    <%= commitment_entries_for(resource, Group, editing, current_user) %>
  </div>
  <div class="small-6 medium-3 columns">
    <label>Subjects</label>
    <%= commitment_entries_for(resource, Subject, editing, current_user) %>
  </div>
  <div class="small-6 medium-3 columns">
    <label>Services</label>
    <%= commitment_entries_for(resource, Service, editing, current_user) %>
  </div>
  <div class="small-6 medium-3 columns">
    <label>Properties</label>
    <%= commitment_entries_for(resource, Property, editing, current_user) %>
  </div>
</div>
  <% if @resourcewarning %>
    <div class="row collapse">
      <div class="small-10 small-offset-1 columns">
        <div class="no-resource-warning">
        Warning!  Your event currently has no resources attached to it
        which means that no-one other than you will be able to see it
        (and then only if you tick the "My events" box).  Think about
        what resources - people, places and services - your event is
        going to use and add them to the event so that your event will
        appear in all the appropriate schedules.
        </div>
      </div>
      <div class="small-1 column">
      </div>
    </div>
  <% end %>
<% else %>
<div class="row collapse">
  <div class="small-12 medium-4 columns">
    <label>Staff</label>
    <%= commitment_entries_for(resource, Staff, editing, current_user) %>
  </div>
  <div class="small-12 medium-4 columns">
    <label>Groups</label>
    <%= commitment_entries_for(resource, Group, editing, current_user) %>
  </div>
  <div class="small-12 medium-4 columns">
    <label>Locations</label>
    <%= commitment_entries_for(resource, Location, editing, current_user) %>
  </div>
</div>
<% end %>

