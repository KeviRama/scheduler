<% if @minimal %>
<a class="close-reveal-modal">&#215;</a>
<% end %>

<div class="row">
  <div class="small-12 medium-3 columns">

    <div class="row">
      <div class="small-12 columns">
        <label>Description</label>
        <p><%= @event.body %></p>
      </div>
    </div>

    <% if known_user? %>
    <div class="row">
      <div class="small-12 columns">
        <label>Event category</label>
        <p><%= @event.eventcategory.name %></p>
      </div>
      <div class="small-12 columns">
        <label>Event source</label>
        <p><%= @event.eventsource.name %></p>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <label>Event id</label>
        <p><%= @event.id %></p>
      </div>
      <div class="small-12 columns">
        <label>Owner</label>
        <p><%= @event.owner_id == nil || @event.owner_id == 0 ?
            "System" :
            @event.owner.name %></p>
      </div>
    </div>

    <% end %>

    <% unless @event.organiser == nil %>
      <div class="row">
        <div class="small-12 columns">
          <label>Organiser</label>
          <p>
          <%= @event.organiser ?  @event.organiser.name : "" %>
          </p>
        </div>
      </div>
    <% end %>

    <div class="row">
      <% if @event.minimal_duration? %>
        <div class="small-12 columns"%>
          <label><%= @event.all_day ? "On" : "At" %>:</label>
          <%= @event.starts_at_text %>
        </div>
      <% else %>
        <div class="small-12 columns"%>
          <label>Starts</label>
          <p><%= @event.starts_at_text %></p>
        </div>
        <div class="small-12 columns"%>
          <label>Ends</label>
          <p><%= @event.ends_at_text %></p>
        </div>
      <% end %>
    </div>

  </div>
  <div class="small-12 medium-9 columns">
    <div id="event_resources">
      <%=
        render partial: "resource",
          object: @event,
          locals: {editing: false}
        %>
    </div>
    <% if current_user && current_user.known? %>
      <div id="event_note">
        <%= render @note %>
      </div>
      <div id="attached_files">
        <%= render partial: "attachments/attached_files", object: @files %>
      </div>
    <% end %>
  </div>
</div>

<% if !@minimal %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
<% end %>
