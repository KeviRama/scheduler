<%= form_for(@event, remote: @minimal) do |f| %>
  <div id="for_errors">
    <% if @event.errors.any? %>
      <%= render "error_msgs" %>
    <% end %>
  </div>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :description, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_area :body %>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :eventcategory_id, class: "right inline" %>
    </div>
    <div class="small-5 columns">
      <%= f.collection_select(:eventcategory_id,
                              Eventcategory.all.sort,
                              :id,
                              :name,
                              { :prompt => true }) %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :eventsource_id, class: "right inline" %>
    </div>
    <div class="small-5 columns">
    <%= f.collection_select(:eventsource_id,
                            Eventsource.all.sort,
                            :id,
                            :name,
                            { :prompt => true }) %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :starts_at, class: "right inline" %>
    </div>
    <div class="small-5 columns">
      <%= f.text_field :starts_at,
                       :value => @event.starts_at_text,
                       :class => :datetimepicker %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :ends_at, class: "right inline" %>
    </div>
    <div class="small-5 columns">
      <%= f.text_field :ends_at,
                       :value => @event.ends_at_text,
                       :class => :datetimepicker %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :resources, class: "right inline" %>
    </div>
    <div class="small-5 columns">
      <% @event.resources.each do |resource| %>
        <%= resource.name %><br/>
      <% end %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :all_day, class: "right" %>
    </div>
    <div class="small-1 columns">
      <%= f.check_box :all_day %>
    </div>
    <div class="small-8 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :approximate, class: "right" %>
    </div>
    <div class="small-1 columns">
      <%= f.check_box :approximate %>
    </div>
    <div class="small-8 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :non_existent, class: "right" %><br>
    </div>
    <div class="small-1 columns">
      <%= f.check_box :non_existent %>
    </div>
    <div class="small-8 columns"></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :private, class: "right" %><br>
    </div>
    <div class="small-1 columns">
      <%= f.check_box :private %>
    </div>
    <div class="small-8 columns"></div>
  </div>
  <div class="row">
    <div class="small-9 small-offset-3 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>
