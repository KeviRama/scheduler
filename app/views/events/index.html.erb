<h1><%= @title %></h1>

<div class="digg_pagination">
  <%= will_paginate @events %>
</div>

<table class="zftable">
  <thead>
    <tr>
      <th>Start</th>
      <th>Duration</th>
      <th>Body</th>
      <% if @show_owner %>
        <th title="Owner">Own</th>
      <% end %>
      <% if @show_organiser %>
        <th title="Organiser">Org</th>
      <% end %>
      <th title="Incomplete">Inc</th>
      <th title="Pending approvals">Pend</th>
      <th title="Rejections">Rej</th>
      <th title="Forms to complete">Frms</th>
    </tr>
  </thead>

  <tbody>
    <%= render @events %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @events %>
</div>

<br>

