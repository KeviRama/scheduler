<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :era %><br>
    <%= f.collection_select(:era_id,
                            Era.all.sort,
                            :id,
                            :name,
                            { :prompt => true }) %>
  </div>
  <div class="field">
    <%= f.label :current %><br>
    <%= f.check_box :current %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% if @group.id %>
  <h3>Members</h3>
  <div id="membership">
  <%= render partial: "membership", object: @group, locals: {editing: true} %>
  </div>
  <%= form_for(@membership, remote: true) do |f| %>
    <%= f.autocomplete_field :element_name,
                             autocomplete_element_name_elements_path,
                             :id_element => '#membership_element_id' %>
    <%= f.text_field :element_id, :type => :hidden %>
    <%= f.text_field :group_id, :type => :hidden %>
    <%= f.submit "Add member" %>
  <% end %>
<% else %>
  <p>First create the group in order to allow resources to be added.</p>
<% end %>
