Membership of <%= @membership.group.name %>
<%= form_for([@group, @membership]) do |f| %>
  <% if @membership.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row collapse'>
    <div class='small-2 columns'>
      <%= f.label :member_element, class: 'right inline' %>
    </div>
    <div class='small-6 columns'>
      <%= f.autocomplete_field :element_name,
                               autocomplete_element_name_elements_path,
                               :id_element => '#membership_element_id',
                               :placeholder => "Name of element",
                               "data-auto-focus" => true %>
      <%= f.text_field :element_id, :type => :hidden %>
    </div>
    <div class='small-4 columns'>
    </div>
  </div>
  <div class='row collapse'>
    <div class='small-2 columns'>
      <%= f.label :starts_on, class: 'right inline' %>
    </div>
    <div class='small-2 columns'>
      <%= f.text_field :starts_on_text, autocomplete: 'off', class: 'datepicker' %>
    </div>
    <div class='small-2 columns'>
      <%= f.label :ends_on, class: 'right inline' %>
    </div>
    <div class='small-2 columns'>
      <%= f.text_field :ends_on_text, autocomplete: 'off', class: 'datepicker' %>
    </div>
    <div class='small-4 columns'>
    </div>
  </div>
  <div class='row collapse'>
    <div class='small-2 columns'>
      <%= f.label :inverse, class: 'right inline' %>
    </div>
    <div class='small-1 columns'>
      <%= f.check_box :inverse %>
    </div>
    <div class='small-9 columns'>
    </div>
  </div>
  <%= f.submit nil, class: 'zfbutton tiny radius' %>
  <%=
    link_to "Cancel",
      group_memberships_path(@membership.group),
      class: 'zfbutton tiny radius button-link'
    %>
<% end %>
