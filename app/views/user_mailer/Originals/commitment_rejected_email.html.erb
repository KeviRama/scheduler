<div class='um-subject-text'>
  <%= @subject %>
</div>
<div class='um-event-body'>
  <%= @event.body %>
</div>
<div class='um-event-timing'>
<%= @event.starts_at.strftime('%d/%m/%Y') %> at <%= @event.starts_at.strftime('%H:%M') %>
</div>
<div class='um-preamble'>
  Unfortunately, <span class='um-rejecter-name'><%=
    @rejecter
    %></span> has identified a problem with your request for:
</div>
<div class='um-requested-element'>
  <%= @element.name %>
</div>
<div class='um-midamble'>
  <span class='um-rejecter-name'><%= @rejecter %></span>
  gave the following reason:
</div>
<div class='um-reason'>
  <%= @reason %>
</div>
<% if @user %>
<div class='um-postamble'>
  Please use the buttons below to adjust or cancel your request.
</div>
<div class='um-buttons'>
  <%= mailer_scheduler_link(@event) %>
  <% if @rejecter_email %>
    <%= mailer_mail_to_link(@rejecter_email,
                            @rejecter,
                            mailer_subject(@event)) %>
  <% end %>
  <%= mailer_user_events_link(@user) %>
</div>
<% end %>
