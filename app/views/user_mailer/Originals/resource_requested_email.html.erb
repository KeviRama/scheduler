<div class='flip-button'>
  <%= mailer_resource_link("View requests", @resource) %>
</div>
<h3>Request for <%= @resource.name %></h3>
<ul>
  <li>Event: <%= @event.body %></li>
  <li>Starting: <%= @event.starts_at_text %></li>
  <li>Duration: <%= @event.duration_text %></li>
  <li>Originator: <%= @user_name %></li>
  <li>Event owner: <%= @owner_name %></li>
  <li>Event organiser: <%= @organiser_name %></li>
</ul>
