<h2><%= @title %></h2>
<p>
<%= render "common" %>
</p>

<% if @reduced %>
<h3>Appearance</h3>
<%= render "appearance" %>

<% else %>
<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#concern-appearance">Appearance</a></li>
  <% if @urls %>
    <li class="tab-title"><a href="#concern-feeds">Feeds</a></li>
  <% end %>
  <li class="tab-title"><a href="#concern-report">Report</a></li>
  <% if @proforma %>
    <li class="tab-title"><a href="#concern-proforma">Pro-forma</a></li>
  <% end %>
</ul>

<hr/>
<div class="tabs-content">
  <div class="content active" id="concern-appearance">
    <h3>Appearance</h3>
    <%= render "appearance" %>
  </div>
<% if @urls %>
  <div class="content" id="concern-feeds">
    <%= render @urls %>
  </div>
<% end %>
  <div class="content" id="concern-report">
    <h3>Report</h3>
    <%= render "report" %>
  </div>
<% if @proforma %>
  <div class="content" id="concern-proforma">
    <h3>Requirements pro-forma</h3>
    <p>
    This is what will be shown to users who request this item for their events.
    </p>
    <div id="pro-forma-space">
      <% if @concern.element.promptnote %>
        <%= render @concern.element.promptnote %>
      <% else %>
        <%= render "promptnotes/no_promptnote.html.erb" %>
      <% end %>
    </div>
  </div>
<% end %>
<hr/>
<% end %>
