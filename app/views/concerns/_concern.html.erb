<tr>
  <td style="background-color:<%= concern.colour %>;color:white;font-size:90%" class="dynamic-element" concern_id="<%= concern.id %>" title="<%= concern.element_id %>">
    <%= concern.element.name %>
  </td>
  <td>
    <input type="checkbox"
           class="active-checkbox"
           concern_id=<%= concern.id %>
           <%= concern.visible ? "checked" : "" %> />
  </td>
  <td>
    <% if concern.user_can_delete? %>
      <%= link_to '&#215;'.html_safe, concern, remote: true, method: :delete %>
    <% end %>
  </td>
</tr>

