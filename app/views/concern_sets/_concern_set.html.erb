<div class='row collapse'>
  <div class='small-5 columns'>
  <%= concern_set.name %>
  (<%= pluralize(concern_set.num_concerns, 'item') %>)
  </div>
  <div class='small-7 columns'>
    <%=
      link_to('Select',
              select_user_concern_set_path(@user, concern_set),
              method: :put,
              remote: true,
              class: 'zfbutton teensy radius button-link')
            %>
  <% if concern_set.id && concern_set.id != 0 %>
    <%=
      link_to('Rename',
              edit_user_concern_set_path(@user, concern_set),
              method: :get,
              remote: true,
              class: 'zfbutton teensy radius button-link')
            %>
    <%= link_to("&#215;".html_safe,
                [@user, concern_set],
                method: :delete,
                remote: true,
                data: {
                  confirm: "Are you sure you want to completely delete the view \"#{concern_set.name}\" and all its configuration?"
                }) %>
            <% end %>
  </div>
</div>
