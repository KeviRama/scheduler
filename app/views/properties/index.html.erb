<h1>Listing properties</h1>
<p id="notice"><%= notice %></p>

<div class="apple_pagination">
  <%= will_paginate @properties %>
</div>

<table class="zftable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owners</th>
      <th>Public</th>
      <th>Current</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.owners_initials %></td>
        <td><%= boolean_icon(property.make_public?) %></td>
        <td><%= boolean_icon(property.current?) %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td>
          <% if property.can_destroy? %>
            <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
  <%= will_paginate @properties %>
</div>

<br>

<%= link_to 'New Property', new_property_path, :class => "zfbutton tiny radius" %>
