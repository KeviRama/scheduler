<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th>Current era</th>
      <th>Next era</th>
      <th>Previous era</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.current_era ? setting.current_era.name : "Era not set" %></td>
        <td><%= setting.next_era ? setting.next_era.name : "Era not set" %></td>
        <td><%= setting.previous_era ? setting.previous_era.name : "Era not set" %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
